<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<fragment class="com.android.controldroid.app.MainMenu"
		android:id="@+id/main_menu" android:layout_weight="0.95"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:padding="3px" >
	    <!-- Preview: layout=@layout/menu -->
	</fragment>

	<FrameLayout class="com.android.controldroid.surface.ControlDroidSurface"
		android:id="@+id/surface" android:layout_weight="0.05"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:padding="3px" android:background="?android:attr/detailsElementBackground" />


</LinearLayout>
